{% extends 'admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h1>Category index</h1>
            <a href="{{ path('app_admin_category_new') }}">Create new</a>
        </div>
        <div class="ibox-content">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('app_admin_category_show', {'id': category.id}) }}">show</a>
                            <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
